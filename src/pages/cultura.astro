---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.tsx';

// Prefijo base para GitHub Pages
const base = '/Proyecto-Astro-Peru/';

// Corrige TODAS las rutas de imágenes y thumbs
const images = [
  { src: `${base}img/cultura/danzas.jpg`, thumb: `${base}img/cultura/danzas.jpg`, alt: 'Danzas Típicas', title: 'Danzas Llenas de Historia' },
  { src: `${base}img/cultura/textiles.jpg`, thumb: `${base}img/cultura/textiles.jpg`, alt: 'Textiles Andinos', title: 'El Arte en los Hilos' },
  { src: `${base}img/cultura/inti-raymi.jpg`, thumb: `${base}img/cultura/inti-raymi.jpg`, alt: 'Fiesta del Inti Raymi', title: 'Fiestas Ancestrales' },
];
---

<Layout title="Cultura Peruana">
  <div class="page-container">
    <header class="page-header" data-aos="fade-in">
      <h1>Cultura Viva</h1>
      <p>Un legado milenario que se respira en cada rincón del país.</p>
    </header>
    <section class="section-container">
      <Gallery images={images} client:visible />
    </section>
  </div>
</Layout>
