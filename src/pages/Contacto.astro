---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL || '/Proyecto-Astro-Peru/';

interface Props {
  title: string;
  description?: string;
}
const { title, description = "Contáctanos para consultas, sugerencias o colaboraciones." } = Astro.props;
---

<Layout title="Contacto" description={description}>
  <div class="page-container contacto-page">
    <header class="page-header" data-aos="fade-in">
      <h1>Contáctanos</h1>
      <p>Estamos aquí para ayudarte. Escríbenos y te responderemos a la brevedad.</p>
    </header>

    <section class="section-container" data-aos="fade-up">
      <h2>Email</h2>
      <p><a href="mailto:intercambio@ejemplo.com">intercambio@ejemplo.com</a></p>
    </section>

    <section class="section-container" data-aos="fade-up">
      <h2>Redes Sociales</h2>
      <ul>
        <li><a href="https://instagram.com/tuUsuario" target="_blank" rel="noopener noreferrer">Instagram</a></li>
        <li><a href="https://linkedin.com/in/tuPerfil" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
      </ul>
    </section>
  </div>
</Layout>

<style>
  .contacto-page {
    padding: 2rem 0;
  }
  .page-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  .page-header p {
    color: #555;
  }
  .section-container {
    margin-top: 2rem;
    text-align: center;
  }
  .section-container h2 {
    font-size: 1.5rem;
    color: #c62828;
    margin-bottom: 0.5rem;
  }
  .section-container p, .section-container ul {
    font-size: 1rem;
    color: #333;
  }
  .section-container ul {
    list-style: none;
    padding: 0;
  }
  .section-container li {
    margin: 0.5rem 0;
  }
  .section-container a {
    color: #1565c0;
    text-decoration: none;
  }
  .section-container a:hover {
    text-decoration: underline;
  }
</style>
