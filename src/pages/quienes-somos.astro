---
import Layout from '../layouts/Layout.astro';
// --- DATOS CORREGIDOS PARA 3 ESTUDIANTES ---
const teamMembers = [
    {
        name: 'Nombre Estudiante 1',
        major: 'Carrera del Estudiante 1',
        university: 'Universidad de Origen 1',
        photo: '/img/placeholder-1.png',
        bio: 'Escribe aquí una breve biografía sobre ti, tus pasiones e intereses en este intercambio cultural.'
    },
    {
        name: 'Nombre Estudiante 2',
        major: 'Carrera del Estudiante 2',
        university: 'Universidad de Origen 2',
        photo: '/img/placeholder-2.png',
        bio: 'Escribe aquí una breve biografía sobre ti, tus pasiones e intereses en este intercambio cultural.'
    },
    {
        name: 'Nombre Estudiante 3',
        major: 'Carrera del Estudiante 3',
        university: 'Universidad de Origen 3',
        photo: '/img/placeholder-3.png',
        bio: 'Escribe aquí una breve biografía sobre ti, tus pasiones e intereses en este intercambio cultural.'
    },
];
---

<Layout title="Quiénes Somos">
    <div class="page-container quienes-somos-page">
        <header class="page-header" data-aos="fade-in">
            <h1>Conoce al Equipo</h1>
            <p>Somos los rostros detrás de esta iniciativa, uniendo dos culturas hermanas.</p>
        </header>
        
        <div class="team-container">
            {teamMembers.map((member, index) => (
                <div class="member-profile-card" data-aos="fade-up" data-aos-delay={index * 100}>
                    <div class="member-photo-container">
                        <img src={member.photo} alt={`Foto de ${member.name}`} class="member-photo" />
                    </div>
                    <div class="member-info">
                        <h2>{member.name}</h2>
                        <h3>{member.major}</h3>
                        <h4>{member.university}</h4>
                        <p class="member-bio">"{member.bio}"</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</Layout>